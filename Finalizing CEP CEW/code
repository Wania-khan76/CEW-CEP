//including libraries

#include <stdio.h>
#include <stdlib.h>
#include <curl/curl.h>
#include <cjson/cJSON.h>
#include <string.h>

// Structure to store received data during the HTTP request
struct MemoryStruct {
    char *memory;
    size_t size;
};

// Callback function to handle and store the received data
size_t write_callback(void *contents, size_t size, size_t nmemb, struct MemoryStruct *mem) {
    size_t realsize = size * nmemb;
    
    // Resize the memory block to accommodate the new data
    mem->memory = realloc(mem->memory, mem->size + realsize + 1);
    if (mem->memory == NULL) {
        fprintf(stderr, "Not enough memory (realloc returned NULL)\n");
        return 0; // Return 0 to indicate an error
    }

    // Copy the new data to the memory block
    memcpy(&(mem->memory[mem->size]), contents, realsize);
    mem->size += realsize;
    mem->memory[mem->size] = 0; // Null-terminate the memory block
    return realsize;
}

int main() {
    // URL for the Visual Crossing Weather API
    const char *url = "https://weather.visualcrossing.com/VisualCrossingWebServices/rest/services/timeline/24.8607,67.0011/next14days?unitGroup=metric&key=ZW9AR97RBK5CAKJJ8RDE9DR4P";

    // Initialize libcurl
    CURL *curl = curl_easy_init();
    if (!curl) {
        fprintf(stderr, "Error initializing cURL.\n");
        return 1; // Return 1 to indicate an error
    }

    // Set the URL for the cURL request
    curl_easy_setopt(curl, CURLOPT_URL, url);

    // Structure to hold the received data
    struct MemoryStruct chunk;
    chunk.memory = malloc(1); // Allocate initial memory
    chunk.size = 0;

    // Set cURL options for handling data
    curl_easy_setopt(curl, CURLOPT_WRITEFUNCTION, write_callback);
    curl_easy_setopt(curl, CURLOPT_WRITEDATA, &chunk);

    // Perform the request to the Visual Crossing API
    CURLcode res = curl_easy_perform(curl);
    if (res != CURLE_OK) {
        fprintf(stderr, "cURL failed: %s\n", curl_easy_strerror(res));
        curl_easy_cleanup(curl);
        free(chunk.memory);
        return 1; // Return 1 to indicate an error
    }

    // Clean up cURL resources
    curl_easy_cleanup(curl);

    // Parse the received JSON data using cJSON
    cJSON *json = cJSON_Parse(chunk.memory);
    if (!json) {
        fprintf(stderr, "Error parsing JSON data.\n");
        free(chunk.memory);
        return 1; // Return 1 to indicate an error
    }

    // Open a file for writing the raw JSON data
    FILE *jsonFile = fopen("raw_data.json", "w");

    if (!jsonFile) {
        fprintf(stderr, "Error opening file for writing.\n");
        cJSON_Delete(json);
        free(chunk.memory);
        return 1; // Return 1 to indicate an error
    }

    // Convert cJSON object to a string and write it to the file
    char *jsonString = cJSON_Print(json);
    fprintf(jsonFile, "%s", jsonString);

    // Clean up cJSON resources, allocated string, and memory block
    cJSON_Delete(json);
    free(jsonString);
    free(chunk.memory);

    // Close the file
    fclose(jsonFile);

    return 0; // Return 0 to indicate successful execution
}
